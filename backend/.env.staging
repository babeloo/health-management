# Staging环境配置
NODE_ENV=staging
PORT=3000

# 数据库连接（需替换为实际Staging数据库）
DATABASE_URL="postgresql://admin:CHANGE_THIS@staging-db:5432/health_mgmt?schema=public"

# Redis
REDIS_HOST=staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS

# JWT
JWT_SECRET=CHANGE_THIS_TO_SECURE_KEY
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# InfluxDB
INFLUX_URL=http://staging-influxdb:8086
INFLUX_TOKEN=CHANGE_THIS
INFLUX_ORG=vakyi
INFLUX_BUCKET=health_data

# MongoDB
MONGO_URL=mongodb://admin:CHANGE_THIS@staging-mongo:27017/health_messages?authSource=admin

# MinIO
MINIO_ENDPOINT=staging-minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=CHANGE_THIS
MINIO_SECRET_KEY=CHANGE_THIS
MINIO_BUCKET=health-mgmt
MINIO_USE_SSL=true

# AI服务
AI_SERVICE_URL=http://staging-ai-service:8000

# 日志配置
LOG_LEVEL=info
