{
  "*": ["node scripts/check-pm-protocol.js"],
  "backend/**/*.{ts,tsx}": ["eslint --fix", "prettier --write"],
  "backend/src/**/*.{ts,tsx}": [
    "bash -c 'cd backend && tsc --noEmit'",
    "bash -c 'cd backend && pnpm test:unit --bail --passWithNoTests'"
  ],
  "frontend-patient/**/*.{js,jsx,ts,tsx,vue}": ["eslint --fix", "prettier --write"],
  "frontend-web/**/*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
  "{README.md,CONTRIBUTING.md,CHANGELOG.md}": [
    "markdownlint-cli --fix",
    "markdown-link-check",
    "prettier --write"
  ],
  "docs/**/*.md": ["markdownlint-cli --fix", "markdown-link-check", "prettier --write"],
  "*.{json,yml,yaml}": ["prettier --write"]
}
